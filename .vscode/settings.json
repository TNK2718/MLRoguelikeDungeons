{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--show-column-numbers"
    ],
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true // Runs isort.
    },
    "editor.rulers": [
        120
    ],
    "files.associations": {
        "*.spec": "python"
    },
    "cSpell.words": [
        "BKGND",
        "blit",
        "bresenham",
        "Chebyshev",
        "condlist",
        "czvf",
        "datas",
        "dejavu",
        "dtype",
        "equippable",
        "isort",
        "KMOD",
        "LALT",
        "LCTRL",
        "LGUI",
        "liskin",
        "mypy",
        "noarchive",
        "Numpad",
        "PAGEUP",
        "pwsh",
        "pyinstaller",
        "PYTHONHASHSEED",
        "PYTHONOPTIMIZE",
        "RALT",
        "RCTRL",
        "RGUI",
        "roguelike",
        "sublicensable",
        "svenstaro",
        "tcod",
        "tolist",
        "unequip",
        "ustar",
        "vsync"
    ]
}